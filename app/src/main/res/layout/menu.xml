<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/table">

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Neues Spiel"
        android:id="@+id/btnNewGame"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/textTitle"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Spiel beitreten"
        android:id="@+id/btnJoinGame"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/btnNewGame"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Hilfe"
        android:id="@+id/btnHelp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/btnJoinGame"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mensch Ã¤rgere dich nicht"
        android:id="@+id/textTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        style="@android:style/TextAppearance.Holo.Large"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textStyle="bold" />
</RelativeLayout>